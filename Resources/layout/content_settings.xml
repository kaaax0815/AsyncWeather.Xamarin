<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:designer="http://xamarin.com/mono/android/designer"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tableLayout1">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TableRow
        android:layout_marginLeft="15dip"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/weatherlayout"
        android:layout_marginRight="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            tools:ignore="UselessParent"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dip"
                android:layout_height="wrap_content"
                android:text="@string/weatherapi"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dip"
                android:layout_height="wrap_content"
                android:text="@string/openweathermapdescription"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#767676" />
    </TableRow>
    <TableRow
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/locationlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            tools:ignore="UselessParent"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dip"
                android:layout_height="wrap_content"
                android:text="@string/locationapi"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dip"
                android:layout_height="wrap_content"
                android:text="@string/locationiqdescription"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#767676" />
    </TableRow>
    <TableRow
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/cachelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            tools:ignore="UselessParent"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dip"
                android:layout_height="wrap_content"
                android:text="@string/cacheduration"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dip"
                android:layout_height="wrap_content"
                android:text="@string/cachedescription"/>
        </LinearLayout>
    </TableRow>
    <LinearLayout
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="15dip"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            tools:ignore="PossibleUselessLayoutOrParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/devlayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dip"
                android:layout_height="wrap_content"
                android:text="@string/developer"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dip"
                android:layout_height="wrap_content"
                android:text="@string/devdescription"/>
        </LinearLayout>
    </LinearLayout>
</TableLayout>